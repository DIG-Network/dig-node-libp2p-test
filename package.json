{
  "name": "dig-network-node",
  "version": "1.0.0",
  "description": "DIG Network P2P Node for .dig file sharing",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build-all": "npm run build && npm run build-sw",
    "dev": "tsx watch examples/basic-node.ts",
    "start": "node dist/examples/basic-node.js",
    "start:prod": "node dist/examples/production-node.js",
    "dev:prod": "tsx examples/production-node.ts",
    "test": "tsx examples/test-node.ts",
    "connect-peers": "tsx examples/connect-peers.ts",
    "bootstrap": "tsx examples/bootstrap-server.ts",
    "global": "tsx examples/global-discovery-node.ts",
    "local": "tsx examples/local-network-test.ts",
    "deploy": "bash scripts/deploy-simple.sh",
    "docker:build": "docker build -t dig-bootstrap .",
    "build-sw": "tsc src/service-worker/dig-service-worker.ts --outDir public --target es2020 --lib es2020,webworker --skipLibCheck",
    "serve": "http-server public -p 3000"
  },
  "dependencies": {
    "@chainsafe/libp2p-noise": "^16.1.4",
    "@chainsafe/libp2p-yamux": "^7.0.4",
    "@libp2p/autonat": "^2.0.38",
    "@libp2p/bootstrap": "latest",
    "@libp2p/circuit-relay-v2": "^3.2.24",
    "@libp2p/identify": "^3.0.39",
    "@libp2p/kad-dht": "latest",
    "@libp2p/mdns": "latest",
    "@libp2p/tcp": "latest",
    "@libp2p/upnp-nat": "^3.1.22",
    "@libp2p/webrtc": "^5.2.24",
    "@libp2p/webrtc-star": "^7.0.0",
    "@libp2p/websockets": "^9.2.19",
    "@multiformats/multiaddr": "^12.5.1",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "it-pipe": "latest",
    "jszip": "^3.10.0",
    "libp2p": "latest",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uint8arrays": "latest",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jszip": "^3.4.0",
    "@types/node": "^20.0.0",
    "http-server": "^14.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
