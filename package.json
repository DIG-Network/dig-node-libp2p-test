{
  "name": "dig-network-node",
  "version": "1.0.0",
  "description": "DIG Network P2P Node for .dig file sharing",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build-all": "npm run build && npm run build-sw",
    "start": "node dist/examples/unified-dig-node.js",
    "start:prod": "NODE_ENV=production node dist/examples/unified-dig-node.js",
    "bootstrap": "tsx examples/dedicated-bootstrap.ts",
    "bootstrap:prod": "NODE_ENV=production node dist/examples/dedicated-bootstrap.js",
    "dev": "tsx examples/unified-dig-node.ts",
    "unified": "tsx examples/unified-dig-node.ts",
    "gateway": "tsx examples/gateway-server.ts",
    "docker:build": "docker build -t dig-bootstrap .",
    "build-sw": "tsc src/service-worker/dig-service-worker.ts --outDir public --target es2020 --lib es2020,webworker --skipLibCheck",
    "serve": "http-server public -p 3000"
  },
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "^14.1.2",
    "@chainsafe/libp2p-noise": "^16.1.4",
    "@chainsafe/libp2p-yamux": "^7.0.4",
    "@libp2p/autonat": "^2.0.38",
    "@libp2p/bootstrap": "latest",
    "@libp2p/circuit-relay-v2": "^3.2.24",
    "@libp2p/floodsub": "^10.1.46",
    "@libp2p/gossipsub": "^14.1.1",
    "@libp2p/identify": "^3.0.39",
    "@libp2p/kad-dht": "latest",
    "@libp2p/mdns": "latest",
    "@libp2p/peer-record": "^8.0.35",
    "@libp2p/pubsub-peer-discovery": "^11.0.2",
    "@libp2p/tcp": "latest",
    "@libp2p/upnp-nat": "^3.1.22",
    "@libp2p/webrtc": "^5.2.24",
    "@libp2p/webrtc-star": "^7.0.0",
    "@libp2p/websockets": "^9.2.19",
    "@multiformats/multiaddr": "^12.5.1",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "it-pipe": "latest",
    "jszip": "^3.10.0",
    "libp2p": "latest",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uint8arrays": "latest",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jszip": "^3.4.0",
    "@types/node": "^20.0.0",
    "http-server": "^14.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
