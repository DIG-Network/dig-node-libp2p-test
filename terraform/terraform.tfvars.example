# Example Terraform variables for DIG Network Bootstrap Server
# Copy this file to terraform.tfvars and customize

# AWS Configuration
aws_region = "us-east-1" # Cheapest region

# Environment
environment = "prod"

# Domain
domain_name = "bootstrap.dig.net"

# Instance Configuration (cheapest options)
instance_type = "t3.nano"        # $3.80/month - cheapest
enable_spot_instances = true      # Even cheaper with spot pricing
spot_max_price = "0.005"         # Max $0.005/hour

# Scaling
min_instances = 1
max_instances = 2

# Monitoring
log_retention_days = 7           # Keep costs low

# SSL Certificate (optional)
# ssl_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# Default tags
default_tags = {
  Project     = "DIG Network"
  Component   = "Bootstrap Server"
  Environment = "production"
  Owner       = "DIG Team"
  CostCenter  = "Infrastructure"
}
